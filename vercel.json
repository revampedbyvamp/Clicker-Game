{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/reset",
            "schedule": "0 0 * * 1"
        }
    ]
}